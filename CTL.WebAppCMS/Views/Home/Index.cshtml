@{
    Layout = null;
}
<html>
<head>
    <title>Home</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript">
        $(function () {
            binClick();
        });
        function binClick()
        {
            $(".onNews").click(function () {
                var title = $(this).text();
               
                var url = $(this).attr("url");

                var isExt = $("#tt").tabs('exists', title); //判断页签是否存在

                if (isExt) {
                    $("#tt").tabs('select', title);
                    return;
                }
                $('#tt').tabs('add', {
                    title: title,
                    //content: '<div style="padding:10px">Content</div>',
                    content:showContent(url),
                    closable: true
                });
            });
        }

        function showContent(url) {
            var strHtml = '<iframe src="'+url+'" scrolling="no" width="100%" height="100%" frameborder="0"></iframe>';
            return strHtml;
        }
    </script>
</head>
<body class="easyui-layout">
    <!-------顶部布局------>
    <div region="north" border="false" style="height: 65px; background: #B3DFDA; overflow: hidden; background-image: url('../../Images/accent.png'); ">
        <img src="~/Images/heroAccent.png" />

    </div>

    <!-------顶部结束------>

    <!-------左边布局------>
     <div region="west" split="true" title="West" style="width:150px;padding:2px;">
         <div id="aa" class="easyui-accordion" style="width:auto;height:auto;">
          <div title="新闻管理" iconCls="icon-ok" style="overflow:auto;padding:10px;">
              <a href="javascript:void(0)" class="onNews" url="/AdminNews/Index">新闻管理</a>

          </div>
           <div title="评论管理" iconCls="icon-reload" selected="true" style="padding:10px;">
               <a href="javascript:void(0)" url="/AdminCommentList/Index">评论管理</a>
           </div>

         </div>

     </div>

    <!-------左边布局结束------>

    <!-------底部布局------>
    <div region="south" border="false" style="height:30px;background:#A9FACD;padding:3px;text-align:center">
        版权&copy;CTL
    </div>
    <!-------底部布局------>


    <!-------中间布局------>
    <div region="center" title="Main Title">
        <div id="tt" class="easyui-tabs" style="width:800px;height:500px" fit="true">
            <div title="新闻管理" data-options="closable:true" style="padding:10px">
                <iframe src="/AdminNews/Index" scrolling="no" width="100%" height="100%" frameborder="0"></iframe>
            </div>
           
        </div>

       
    </div>
    <!-------中间布局------>

</body>
</html>